@{
    ViewBag.Title = "Index";
}
<div ng-controller="HomeController">
    <hr />
    <table style="width: 100%; text-align: center">
        <tr>
            <td style="text-align: center">
                <span class="headerColor" style="font-size:large">Piliin ang device na gagamitin para makita ang website.</span>
            </td>
        </tr>
        <tr>
            <td style="margin: 10px; padding:10px; padding-bottom: 10px">
                <input type="button" class="btn btn-default" style="width: 300px" ng-click="ViewWebsite('mobile')"
                    value="Mobile Phone or Tablet" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="button" class="btn btn-default" style="width: 300px" ng-click="ViewWebsite('pc')"
                    value="Personal Computer (PC) or Laptop" />
            </td>
        </tr>
        <tr>
            <td style="padding-top:80px">
                <span style="font-size:13px">Paalala: Piliin ang tamang device na gagamitin. Para maiwasan ang compatibility issue. </span>
            </td>
        </tr>
    </table>
</div>
@section scripts{
    <script src="~/Scripts/AngularController/HomeController1.1.js"></script>
}

@{
    ViewBag.Title = "Member Distance";
}
<div ng-controller="MemberDistanceController">
    <div ng-init="GetMemberDistance(@ViewBag.ClubID,'@ViewBag.MemberIDNo')">
        <table>
            <tr>
                <td style="width:100px; text-align:right; padding-right:5px">
                    <span>MemberID No. :</span>
                </td>
                <td>
                    <span>{{MemberDistance.memberInfo.memberIDNo}}</span>
                </td>
            </tr>
            <tr>
                <td style="width:100px; text-align:right; padding-right:5px">
                    <span>Last Name :</span>
                </td>
                <td>
                    <span>{{MemberDistance.memberInfo.lastName}}</span>
                </td>
            </tr>
            <tr>
                <td style="width:100px; text-align:right; padding-right:5px">
                    <span>First Name :</span>
                </td>
                <td>
                    <span>{{MemberDistance.memberInfo.firstName}}</span>
                </td>
            </tr>
            <tr>
                <td style="width:100px; text-align:right; padding-right:5px">
                    <span>Middle Name :</span>
                </td>
                <td>
                    <span>{{MemberDistance.memberInfo.middleName}}</span>
                </td>
            </tr>
            <tr>
                <td style="width:100px; text-align:right; padding-right:5px">
                    <span>Loft Name:</span>
                </td>
                <td>
                    <span>{{MemberDistance.memberInfo.loftName}}</span>
                </td>
            </tr>
            <tr>
                <td style="width:100px; text-align:right; padding-right:5px">
                    <span>Coordinates:</span>
                </td>
                <td>
                    <span>{{MemberDistance.memberInfo.coordinates}}</span>
                </td>
            </tr>
            <tr>
            </tr>
        </table>
        <div style="padding-top:10px"><span class="headerColor" style="font-size:15px"><b>NORTH REGION RELEASE POINT</b></span></div>
        <table class="table" style="width:60%">
            <tr>
                <th>
                    <span class="headerColor"><b>Location Name</b></span>
                </th>
                <th>
                     <span class="headerColor"><b>Coordinates</b></span>
                </th>
                <th>
                     <span class="headerColor"><b>Distance (KM)</b></span>
                </th>
            </tr>
            <tr ng-repeat="north in MemberDistance.memberDistance | filter: {region: 'North'}">
                <td>
                    {{north.locationName}}
                </td>
                <td>
                    {{north.coordinates}}
                </td>
                <td>
                    {{north.distance}}
                </td>
            </tr>
        </table>
         <div style="padding-top:10px"><span class="headerColor" style="font-size:15px"><b>SOUTH REGION RELEASE POINT</b></span></div>
         <table class="table" style="width:60%">
            <tr>
                <th>
                    <span class="headerColor"><b>Location Name</b></span>
                </th>
                <th>
                     <span class="headerColor"><b>Coordinates</b></span>
                </th>
                <th>
                     <span class="headerColor"><b>Distance (KM)</b></span>
                </th>
            </tr>
            <tr ng-repeat="north in MemberDistance.memberDistance | filter: {region: 'South'}">
                <td>
                    {{north.locationName}}
                </td>
                <td>
                    {{north.coordinates}}
                </td>
                <td>
                    {{north.distance}}
                </td>
            </tr>
        </table>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/AngularController/MemberDistance1.1.js" type="text/javascript"></script>
}

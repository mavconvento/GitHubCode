@{
    ViewBag.Title = "SMS Logs";
}
<div ng-controller="RaceResultController">
    <table ng-init="SetDate()" width="100%">
        <tr>
            <td colspan="3">
                <table>
                    <tr>
                        <td style="width: 100px; text-align: right; vertical-align: middle; padding-right: 10px">
                            <span style="font-size: 12px">Date From:</span>
                        </td>
                        <td style="margin-top: 5px; padding-top: 5px">
                            <div class="col-md-6">
                                <p class="input-group">
                                    <input type="text" class="form-control input-sm DatePicker" uib-datepicker-popup="{{format}}"
                                        ng-model="ViewLogsFilter.DateFrom" is-open="popup1.opened" style="width: 200px" />
                                    <span class="input-group-btn">
                                        <button type="button" class="btn default-btn input-sm" ng-click="open1()">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </button>
                                    </span>
                                </p>
                            </div>
                        </td>
                        <td style="text-align: right; vertical-align: middle; padding-right: 10px">
                            Date To:
                        </td>
                        <td style="vertical-align: middle; padding-top: 10px">
                            <div class="col-md-6">
                                <p class="input-group">
                                    <input type="text" class="form-control input-sm DatePicker" uib-datepicker-popup="{{format}}"
                                        ng-model="ViewLogsFilter.DateTo" is-open="popup2.opened" style="width: 200px" />
                                    <span class="input-group-btn">
                                        <button class="form-control input-sm" type="button" class="btn default-btn" ng-click="open2()">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </button>
                                    </span>
                                </p>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td style="text-align: right; width:100px; vertical-align: middle; padding-right: 10px">
                <span>Keyword :</span>
            </td>
            <td style="width:310px;">
                <input class="form-control input-sm" ng-model="ViewLogsFilter.Keyword" style="width:310px"
                    type="text" name="searchName" />
            </td>
            <td style="padding-left: 5px">
                <input type="button" class="btn btn-default input-sm" value="View" style="color: Black; background-color:#8dc63f;
                    width: 100px;" ng-click="Submit(@ViewBag.cookiesUserName)" />
            </td>
        </tr>
    </table>
    <hr />
    <div>
        <span style="color: #8dc63f; font-size: 15px; margin-left: 10px"><b>SMS Logs Summary</b></span>
        <table data-ng-table="tableParams" class="table">
            <tr data-ng-repeat="smsLogs in $data">
                <td data-title="'Text Message'" data-sortable="'sMSContent'" style="width: 200px">
                    {{smsLogs.sMSContent}}
                </td>
                <td data-title="'Network Date'" data-sortable="'sMSDate'" style="width: 100px">
                    {{smsLogs.sMSDate}}
                </td>
                <td data-title="'Network Time'" data-sortable="'sMSTime'" style="width: 100px">
                    {{smsLogs.sMSTime}}
                </td>
                <td data-title="'Reply Message'" data-sortable="'replyMessage'" style="width: 400px">
                    {{smsLogs.replyMessage}}
                </td>
            </tr>
        </table>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/AngularController/SMSLogs1.1.js" type="text/javascript"></script>
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title</title>
    <script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ng-table.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ngDialog.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ngDialog.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ngDialog-theme-default.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/ui-bootstrap.js" type="text/javascript"></script>
    <script src="~/Scripts/ui-bootstrap-tpls.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-ui.js" type="text/javascript"></script>
    <script src="~/Scripts/AngularController/MyApp1.1.js"></script>
    <script src="~/Scripts/AngularController/CommonController1.1.js"></script>
    <link href="~/Content/Common.css" rel="stylesheet" type="text/css" />
</head>
<body ng-app="MyApp" class="PortalCss">
    <div ng-controller="CommonController">
        <div class="ng-cloak">
            <div id="bodysection">
                <div id="topBanner" ng-show="IsShowMenu">
                    <table style="width: 100%; margin-top: 10px">
                        <tr>
                            <td style="text-align: right; vertical-align: middle">
                                <ul style="margin-top: 18px; list-style-type: none !important;">
                                    <li>Welcome back, {{UserName}} </li>
                                </ul>
                            </td>
                            <td class="menu" style="width: 100px; padding-left: 30px;">
                                <ul ng-click="Logout">
                                    <li><a href="~/Home/Login" style="color: #8dc63f; text-decoration: none;">
                                        <img src="~/Images/lock.png" style="width: 10px; height: 10px; padding-right: 5px;" />Logout</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </table>
                </div>
                <table class="logo">
                    <tr>
                        <td>
                            <img src="~/Images/logo.png" style="width: 190px; height: auto" />
                        </td>
                        <td style="width: 110px; padding-left: 70px">
                            <img src="~/Images/Products/BigThreeFeeds.jpg" style="width: inherit; height: 92px" />
                        </td>
                        <td style="width: 130px; padding-left: 5px">
                            <img src="~/Images/Products/FerryProbiotic.jpg" style="width: inherit; height: 92px" />
                        </td>
                        <td style="width: 110px; padding-left: 5px">
                            <img src="~/Images/Products/SkyWarriors.jpg" style="width: inherit; height: 92px" />
                        </td>
                        <td style="width: 300px; padding-left: 5px">
                            <img src="~/Images/Products/HeaderAdvertisement.png" style="width: inherit; height: 92px" />
                        </td>
                    </tr>
                </table>
                <div id="navcontainer" class="menu" ng-show="IsShowMenu" ng-init="MainMenuItems">
                    <hr />
                    <ul>
                        <li data-active-link="" class="menu_item" ng-class="getClass('{{menu.url}}')" ng-repeat="menu in MainMenuItems">
                            <a ng-href="{{menu.url}}">{{menu.menuName}}</a> |</li>
                    </ul>
                    <hr />
                </div>
            </div>
            @RenderBody()
        </div>
        <hr style="margin-top: 50px" />
        @CommonFooter.RollingFooter(Url)
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>

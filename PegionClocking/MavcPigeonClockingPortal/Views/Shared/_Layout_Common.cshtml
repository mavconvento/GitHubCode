<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title</title>
    <script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ng-table.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ngDialog.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ngDialog.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ngDialog-theme-default.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/ui-bootstrap.js" type="text/javascript"></script>
    <script src="~/Scripts/ui-bootstrap-tpls.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-ui.js" type="text/javascript"></script>
    <script src="~/Scripts/AngularController/MyApp1.1.js" type="text/javascript"></script>
    <script src="~/Scripts/AngularController/CommonController1.1.js" type="text/javascript"></script>
    <link href="~/Content/Common.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="http://widget.time.is/en.js"></script>
    <script type="text/javascript">
        time_is_widget.init({ Philippines_z42c: { template: "TIME<br>DATE<br>SUN", date_format: "dayname, monthname dnum, year", sun_format: "Sunrise: srhour:srminute Sunset: sshour:ssminute", coords: "13.0000000,122.0000000"} });
    </script>
</head>
<body ng-app="MyApp" class="PortalCss_main">
    <div style="background-color: Black;  margin-top:10px">
        <a href="https://time.is/Philippines" id="time_is_link" rel="nofollow" style="font-size: 20px;
            color: white; background: black">Time in Server:</a> <span id="Philippines_z42c"
                style="font-size: 20px; color: white; background: black"></span>
    </div>
    <div ng-controller="CommonController">
        <div class="ng-cloak">
            <div id="bodysection">
                <div id="topBanner" ng-show="IsShowMenu">
                    <table style="width: 100%;">
                        <tr>
                            <td style="text-align: right; vertical-align: middle">
                                <ul style="margin-top: 8px; list-style-type: none !important;">
                                    <li>Welcome back, {{UserName}} </li>
                                </ul>
                            </td>
                            <td class="menu" style="width: 100px; padding-left: 30px;">
                                <ul ng-click="Logout">
                                    <li><a href="~/Home/Login" style="color: #8dc63f; text-decoration: none;">
                                        <img src="~/Images/lock.png" style="width: 15px; height: 10px; padding-right: 5px;" />Logout</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </table>
                </div>
                <div id="navcontainer" class="menu" ng-show="IsShowMenu" ng-init="MainMenuItems">
                    <hr />
                    <ul>
                        <li data-active-link="" class="menu_item" ng-class="getClass('{{menu.url}}')" ng-repeat="menu in MainMenuItems">
                            <a ng-href="{{menu.url}}">{{menu.menuName}}</a> |</li>
                    </ul>
                    <hr />
                </div>
            </div>
            @RenderBody()
        </div>
        @CommonFooter.RollingFooter_Black(Url)
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>

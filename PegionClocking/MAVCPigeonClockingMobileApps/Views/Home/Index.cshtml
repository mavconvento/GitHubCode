
<div data-role="view" id="home" data-title="Main Menu" style="display: none;" data-reload="true" >
    <div data-role="head">
        <div data-role="navbar"  >			
            <div class="logo" /><span>&nbsp;</span>
        </div>
    </div>
 	
	<div class="pagetitle">@ViewBag.companyname</div>

    <ul data-role="listview" data-style="inset" data-type="group">
        <li>
            <ul>
                <li><a href="@Url.Content("~/Account/Login")" class="loginButton"  >
					@Content.ButtonIcon("greaterthan")
                    <span class="MultilineButtonLabel">Sign In</span></a></li>
            </ul>
        </li>
    </ul>
    <ul data-role="listview" data-style="inset" data-type="group">
        <li>
            <ul>
                <li><a href="@Url.Content("~/MobileRegistration/MobileRegistration")" class="loginButton"  >
					@Content.ButtonIcon("alert")
                    <span class="MultilineButtonLabel">Register Mobile No</span></a></li>
            </ul>
        </li>
    </ul>
